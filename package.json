{
  "name": "auto-top-up",
  "version": "1.0.0",
  "scripts": {
    "rebase": "HUSKY_SKIP_HOOKS=1 git rebase",
    "compile": "npx hardhat compile",
    "deploy": "npx hardhat deploy",
    "format": "prettier --write .",
    "lint": "eslint --cache . && yarn lint:sol",
    "lint:sol": "solhint 'contracts/**/*.sol'",
    "test": "npx hardhat test",
    "test:gas": "REPORT_GAS=1 npx hardhat test",
    "debug": "DEBUG=true yarn compile && npx hardhat test"
  },
  "author": "gelato team",
  "license": "ISC",
  "devDependencies": {
    "@gelatonetwork/core": "1.6.0",
    "@nomiclabs/hardhat-ethers": "2.0.2",
    "@nomiclabs/hardhat-waffle": "2.0.1",
    "@openzeppelin/contracts": "4.0.0",
    "chai": "4.3.4",
    "dotenv": "8.2.0",
    "eslint": "7.24.0",
    "eslint-config-prettier": "8.1.0",
    "ethereum-waffle": "3.3.0",
    "ethers": "5.1.0",
    "hardhat": "2.1.2",
    "hardhat-deploy": "0.7.4",
    "hardhat-deploy-ethers": "0.3.0-beta.7",
    "hardhat-gas-reporter": "1.0.4",
    "husky": "4.3.6",
    "lint-staged": "10.5.4",
    "prettier": "2.2.1",
    "prettier-plugin-solidity": "1.0.0-beta.7",
    "solhint": "3.3.4",
    "solhint-plugin-prettier": "0.0.5"
  }
}
